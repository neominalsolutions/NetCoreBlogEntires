

@model List<RecentPostViewModel>


<div class="col-lg-12">
    <div class="sidebar-item recent-posts">
        <div class="sidebar-heading">
            <h2>Recent Posts</h2>
        </div>
        <div class="content">
            <ul>

                @foreach (var item in Model)
                {
                    <li>
                        
                        <a asp-controller="Post" asp-action="Detail" asp-route-id="@item.PostId">
                            <h5>

                                @item.Title
                            </h5>
                        </a>
                            <span>@item.PublishDate</span>
                        
                    </li>
                }

            </ul>
        </div>
    </div>
</div>